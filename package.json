{
  "name": "deadline-radar",
  "version": "1.0.0",
  "description": "Chrome extension to detect deadlines and manage tasks with countdown timers",
  "scripts": {
    "build": "npm run build-css",
    "build-css": "tailwindcss -i ./src/styles/input.css -o ./styles/output.css --watch",
    "build-prod": "tailwindcss -i ./src/styles/input.css -o ./styles/output.css --minify"
  },
  "dependencies": {
    "chrono-node": "^2.6.1"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17"
  }
}
