{
	"manifest_version": 3,
	"name": "Deadline Radar",
	"description": "Detects deadlines and tasks on webpages, helps you manage them in a dashboard.",
	"version": "1.0.0",
	"icons": {
		"16": "assets/icon16.png",
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	},
	"permissions": [
		"storage",
		"notifications",
		"tabs"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "assets/icon16.png",
			"48": "assets/icon48.png",
			"128": "assets/icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["lib/dayjs.min.js", "content/content.js"],
			"run_at": "document_idle"
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["assets/*"],
			"matches": ["<all_urls>"]
		}
	]
}
